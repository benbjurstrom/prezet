{
    "name": "prezet/prezet",
    "description": "Prezet: Markdown Blogging for Laravel",
    "keywords": [
        "Prezet",
        "laravel",
        "prezet"
    ],
    "homepage": "https://github.com/prezet/prezet",
    "license": "MIT",
    "authors": [
        {
            "name": "Ben Bjurstrom",
            "email": "benbjurstrom@users.noreply.github.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2",
        "ext-dom": "*",
        "ext-gd": "*",
        "benbjurstrom/laravel-sitemap-lite": "^7.3.1",
        "illuminate/contracts": "^10.0||^11.0||^12.0",
        "league/commonmark": "^2.6.1",
        "phiki/phiki": "^1.1",
        "spatie/laravel-package-tools": "^1.92.3",
        "symfony/yaml": "^6.2|^7.2.5",
        "wendelladriel/laravel-validated-dto": "^4.1"
    },
    "require-dev": {
        "larastan/larastan": "3.3.1",
        "laravel/pint": "^1.22",
        "nunomaduro/collision": "^8.8",
        "orchestra/testbench": "^9.13",
        "pestphp/pest": "^3.8.1",
        "pestphp/pest-plugin-arch": "^3.1",
        "pestphp/pest-plugin-laravel": "^3.1",
        "phpstan/extension-installer": "1.4.3",
        "phpstan/phpdoc-parser": "2.1.0",
        "phpstan/phpstan": "2.1.11",
        "phpstan/phpstan-deprecation-rules": "2.0.1",
        "phpstan/phpstan-phpunit": "2.0.6",
        "spatie/browsershot": ">=5.0.8"
    },
    "autoload": {
        "psr-4": {
            "Prezet\\Prezet\\": "src/",
            "Prezet\\Prezet\\Database\\Factories\\": "database/factories/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Prezet\\Prezet\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@composer run prepare",
        "clear": "@php vendor/bin/testbench package:purge-prezet --ansi",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "build": [
            "@composer run prepare",
            "@php vendor/bin/testbench workbench:build --ansi"
        ],
        "start": [
            "Composer\\Config::disableProcessTimeout",
            "@composer run build",
            "@php vendor/bin/testbench serve"
        ],
        "analyse": "vendor/bin/phpstan analyse -c ./phpstan.neon.dist --memory-limit=2G",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Prezet\\Prezet\\PrezetServiceProvider"
            ],
            "aliases": {
                "Prezet": "Prezet\\Prezet\\Facades\\Prezet"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
